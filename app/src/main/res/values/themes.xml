<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RedRecorder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RedRecorder" parent="Base.Theme.RedRecorder" />
    <style name="normalTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/sn_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
    <style name="BigTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/sn_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
    <style name="smallTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/sn_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
    <style name="FullScreenDialogStyle">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>