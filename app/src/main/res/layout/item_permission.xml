<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_4sdp"
    android:id="@+id/mainLayout"
    android:background="@drawable/background_grey_border"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/baseline_info_24"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/ivInfo"
        android:layout_marginTop="@dimen/_8sdp"

        android:layout_height="@dimen/_20sdp"/>
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:src="@drawable/baseline_phone_24"
        android:id="@+id/ivDrawable"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_alignParentTop="true"

        android:layout_marginStart="@dimen/_8sdp"
        android:layout_toEndOf="@id/ivInfo"
        android:layout_height="@dimen/_20sdp"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/smallTextView"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_alignParentTop="true"

        android:textColor="@color/black"
        android:text="Phone"
        android:id="@+id/tvPermissionTitle"
        android:layout_toEndOf="@id/ivDrawable"
        android:fontFamily="@font/raleway_semibold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        style="@style/smallTextView"
        android:layout_gravity="center"

        android:textAlignment="center"
        android:id="@+id/tvPermissionInfo"
        android:textColor="@color/grey"
        android:text="This permission is required to place phone calls."
        android:layout_below="@id/btnCheck"
        android:fontFamily="@font/raleway_semibold"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/btnCheck"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_alignParentTop="true"

        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_weight="1"
        android:background="@drawable/background_green_card"
        android:fontFamily="@font/raleway_semibold"
        android:text="CHECK"
        android:textColor="@color/white" />
</RelativeLayout>